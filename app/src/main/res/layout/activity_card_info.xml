<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    tools:context="com.citi.ci.cardhub.view.CardInfoActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_left"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Detail Information"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="30sp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Verify Information"
        android:layout_gravity="center"
        />

    <View
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:background="#d1cfcf"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.5dp"/>

    <TextView
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : Cassie"
        />

    <TextView
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardInfo"
        android:textSize="20sp"
        android:text="Card Number :2010 1512 3125 6431"
        />

    <View
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:background="#d1cfcf"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.5dp"/>
    <Button
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirm"
        android:onClick="confirm"
        android:text="OK"
        android:layout_gravity="end"
        android:shadowColor="@color/colorPrimary"
        android:background="@drawable/btn_shpe"
        />
</LinearLayout>

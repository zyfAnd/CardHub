<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0ffffff"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/top_image"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <!--android:src="@mipmap/ad4"-->
    <TextView
        android:layout_marginTop="20dip"
        android:layout_below="@+id/top_image"
        android:layout_marginLeft="30dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:lineSpacingMultiplier="1.5"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/test1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
            <ImageView
                android:id="@+id/inconAiliPay"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app8" />

                <ImageView
                    android:layout_toRightOf="@+id/inconAiliPay"
                    android:id="@+id/ivAliPay"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="2dp"
                    android:contentDescription="@null"
                    android:src="@drawable/regards_choose"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tvAliPay"
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textColor="#333333"
                android:textSize="12sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/test2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
            <ImageView
                android:id="@+id/inconWangYi"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app1" />
                <ImageView

                    android:layout_toRightOf="@+id/inconWangYi"
                    android:id="@+id/ivWangYi"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="2dp"
                    android:contentDescription="@null"
                    android:src="@drawable/regards_choose"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网易云音乐"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/test3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
            <ImageView
                android:id="@+id/inconMaoYan"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app2" />
                <ImageView

                    android:layout_toRightOf="@+id/inconMaoYan"
                    android:id="@+id/ivMaoYan"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="2dp"
                    android:contentDescription="@null"
                    android:src="@drawable/regards_choose"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="猫眼看电影"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/test4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/inconQuNaer"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/app3" />
                <ImageView

                    android:layout_toRightOf="@+id/inconQuNaer"
                    android:id="@+id/ivQuNaer"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="2dp"
                    android:contentDescription="@null"
                    android:src="@drawable/regards_choose"/>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去哪儿"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/test5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/iconMeiTuan"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app4" />
                <ImageView

                    android:layout_toRightOf="@+id/iconMeiTuan"
                    android:id="@+id/ivMeiTuan"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="2dp"
                    android:contentDescription="@null"
                    android:src="@drawable/regards_choose"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美团"
                android:textColor="#333333"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/test6"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/iconMobileBike"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app5" />
                <ImageView
                    android:layout_toRightOf="@+id/iconMobileBike"
                    android:id="@+id/ivMobileBike"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="2dp"
                    android:contentDescription="@null"
                    android:src="@drawable/regards_choose"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摩拜单车"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/test7"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/iconDaZong"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app6" />
                <ImageView
                    android:layout_toRightOf="@+id/iconDaZong"
                    android:id="@+id/ivDaZong"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="2dp"
                    android:contentDescription="@null"
                    android:src="@drawable/regards_choose"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大众点评"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/test8"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/iconWeChat"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app9" />
                <ImageView
                    android:layout_toRightOf="@+id/iconWeChat"
                    android:id="@+id/ivWeChat"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="2dp"
                    android:contentDescription="@null"
                    android:src="@drawable/regards_choose"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/pop_rl_click"
        android:layout_width="wrap_content"
        android:layout_height="55dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_shpe"
            android:gravity="center"
            android:shadowColor="#438fff"
            android:layout_marginBottom="10dp"
            android:text="Done"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!--<ImageView-->
            <!--android:layout_width="45dip"-->
            <!--android:layout_height="45dip"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:src="@mipmap/bg" />-->

        <!--<ImageView-->
            <!--android:id="@+id/pop_iv_img"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:src="@mipmap/add" />-->
    </RelativeLayout>

</RelativeLayout>